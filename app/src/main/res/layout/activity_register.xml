<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >   

	<com.ds.avare.utils.OptionButton
        android:id="@+id/spinner_register"
        android:layout_width="fill_parent"
		android:background="@drawable/button_bg_option"
		android:layout_margin="5dp"
		android:layout_height="wrap_content"/>
	
    <Button
        android:id="@+id/btn_register"
        android:layout_below="@+id/spinner_register"
        android:layout_width="fill_parent"
		android:background="@drawable/button_bg"
		android:layout_margin="5dp"
        android:text="@string/register"
        android:layout_height="wrap_content"/>
     
    <Button 
        android:id="@+id/btn_unregister"
        android:layout_below="@+id/btn_register"
        android:layout_width="fill_parent"
		android:background="@drawable/button_bg"
		android:layout_margin="5dp"
        android:text="@string/unregister"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_below="@+id/btn_unregister"
        android:layout_width="fill_parent"
        android:text="@string/unregister"
        android:layout_height="wrap_content">
        
	    <TextView 
	        android:id="@+id/log_text"
	        android:padding="20dp"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"/>
    </ScrollView>
     
</RelativeLayout>