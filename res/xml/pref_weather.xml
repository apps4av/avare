<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <com.ds.avare.utils.ListPreferenceWithSummary
        android:defaultValue="255"
        android:entries="@array/Opacity"
        android:entryValues="@array/OpacityValues"
        android:title="@string/pref_RadarLabel" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="@string/pref_ADSBWeather"
        android:summary="@string/pref_ADSBWeatherSummary"
        android:title="@string/pref_ADSBWeatherLabel" />
    <com.ds.avare.utils.ListPreferenceWithSummary
        android:defaultValue="ALL"
        android:entries="@array/AirSig"
        android:entryValues="@array/AirSig"
        android:key="@string/pref_AirSigType"
        android:summary="@string/pref_AirSigTypeSummary"
        android:title="@string/pref_AirSigTypeLabel" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="@string/pref_XlateWeather"
        android:summary="@string/pref_XlateWeatherSummary"
        android:title="@string/pref_XlateWeatherLabel" />
